<?xml version="1.0" encoding="utf-8"?>
<s:Group 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:parsley="http://www.spicefactory.org/parsley"
	width="100%" height="1690" 
>
	
	<fx:Declarations>
		<parsley:Configure/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.ModuleEvent;
			
			import com.ksria.flex.fxblog.message.FxBlogMessage;
			
			[MessageHandler(selector="initBody")]
			public function initFooter( value : FxBlogMessage ) : void {
				trace("body url = " + value.url )
				module.url = value.url;
				module.loadModule();
			}
			
			/**
			 * show progressbar
			 */
			private function progressHander( event : ModuleEvent ) : void {
				bar.label = "模块加载中：" + Math.round( event.bytesLoaded / event.bytesTotal * 100) + "%";
				bar.setProgress( event.bytesLoaded, event.bytesTotal );
			}
			
		]]>
	</fx:Script>
	
	<mx:ViewStack 
		id="vs" 
		width="100%" height="100%" 
		creationPolicy="all"
	>
		
		<s:NavigatorContent width="100%" height="100%">
			
			<s:layout>
				<s:VerticalLayout horizontalAlign="center" paddingTop="30" />
			</s:layout>
			
			<mx:ProgressBar id="bar" mode="manual" width="450"/>
			
		</s:NavigatorContent>
		
		<s:NavigatorContent width="100%" height="100%">
			
			<s:ModuleLoader
				id="module"
				width="100%" height="100%"
				applicationDomain="{ ApplicationDomain.currentDomain }"
				progress="progressHander(event)" 
				ready="{ vs.selectedIndex = 1; }"
			/>
			
		</s:NavigatorContent>
		
	</mx:ViewStack>
	
</s:Group>