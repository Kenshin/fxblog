<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	width="100%" height="30">
	
	<fx:Script>
		<![CDATA[
			[Bindable] private var _label : String;
			public function get label() : String { return _label; }
			public function set label( v : String ) : void { _label = v; }
		]]>
	</fx:Script>

	<s:layout>
		<s:HorizontalLayout gap="1" verticalAlign="bottom" />
	</s:layout>
	
	<s:Label text="{ _label }" styleName="sideBarLabel"/>
	
	<s:Label text=">>" styleName="sideBarLabelGap"/>

</s:Group>
